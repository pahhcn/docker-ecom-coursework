# Docker E-commerce System - Environment Variables
# This file contains environment-specific configuration
# DO NOT commit this file to version control (it's in .gitignore)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=ecommerce
MYSQL_USER=ecommerce_user
MYSQL_PASSWORD=ecommerce_pass

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

DB_HOST=database
DB_PORT=3306
DB_NAME=ecommerce
DB_USER=root
DB_PASSWORD=rootpassword
SPRING_PROFILES_ACTIVE=prod

# =============================================================================
# TIMEZONE
# =============================================================================

TZ=UTC

# =============================================================================
# DOCKER REGISTRY (for CI/CD)
# =============================================================================

DOCKER_REGISTRY=docker.io
DOCKER_REGISTRY_USER=your_username
DOCKER_REGISTRY_PASSWORD=your_password_or_token
